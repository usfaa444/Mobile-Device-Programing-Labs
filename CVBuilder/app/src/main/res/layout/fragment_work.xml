<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.work.WorkFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblWorkExperience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Work Experience"
            android:textColor="@color/purple_700"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/purple_200"
            android:textSize="15sp"
            android:layout_marginEnd="25dp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_add_15"
            app:drawableTint="@color/purple_200"
            app:layout_constraintBottom_toBottomOf="@+id/lblWorkExperience"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblWorkExperience" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lblWorkExperience" />

        <TextView
            android:id="@+id/lblNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data yet!"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblWorkExperience" />

        <TextView
            android:id="@+id/lblProjects"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Projects"
            android:textColor="@color/purple_700"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewWork" />

        <TextView
            android:id="@+id/addProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/purple_200"
            android:textSize="15sp"
            android:layout_marginEnd="25dp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_add_15"
            app:drawableTint="@color/purple_200"
            app:layout_constraintBottom_toBottomOf="@+id/lblProjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblProjects" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lblProjects" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>